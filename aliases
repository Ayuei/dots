#!/bin/ksh
#
# http://github.com/mitchweaver/dots
#
# note: this is meant for ksh/mksh
#

alias {fc,w}=true 

_ps1_git() { git branch 2> /dev/null | \
    sed -e '/^[^*]/d' -e 's/* \(.*\)/ (\1)/' ; }

cd() { [ $# -eq 0 ] &&
           builtin cd ${HOME} ||
           builtin cd "$1"
        export PS1="$(get_PS1)" ; }

case ${SHELL} in
    /bin/ksh|/bin/bash)
        [ $(id -u) -eq 0 ] &&
            get_PS1() { echo "\[\e[0;32m\][root]\[\e[1;36m\] \W\[\e[1;37m\] " ; } ||
            get_PS1() { echo "\[\e[1;35m\]m\[\e[0;32m\]i\[\e[0;33m\]t\[\e[0;34m\]c\[\e[1;31m\]h\[\e[1;36m\] \W$(_ps1_git)\[\e[1;37m\] " ; } ;;
    /bin/mksh)
        _x="$(print \\001)"
        get_PS1() { 
            case ${PWD} in
                ${HOME}) tmp_pwd='~' ;;
                *) tmp_pwd=`basename "${PWD}"`
            esac
            echo -n "$_x$(print \\r)$_x\e[1;35mm$_x\e[0;32mi$_x\e[0;33mt$_x\e[0;34mc$_x\e[1;31mh$_x\e[1;36m $tmp_pwd$_x$(_ps1_git)$_x\e[1;37m "
        } ;;
    *) get_PS1() { echo "\u \W " ; }
esac

export PS1="$(get_PS1)"

netstart() { [ $# -eq 0 ] &&
                 doas /etc/netstart "$@" ||
                 doas /etc/netstart "$@" ; }
alias disks="sysctl hw.disknames"
alias disklabel='disklabel -h'
alias disknames='sysctl hw.disknames'
alias sensors="sysctl hw.sensors"
pkg_del() { pkg_delete $@ ; pkg_delete -a ; }
pkg() { case "$1" in
            add) shift ; pkg_add "$@" ;;
            del) shift ; pkg_del "$@" ;;
            info) shift ; pkg_info "$@" ;;
            search) shift ; pkg_info -Q "$@" ;;
            update) shift ; pkg_add -Uui "$@" ;;
            check) shift ; pkg_check "$@" ;;
            *) echo "?"
        esac ; }
alias killall="pkill -9"
alias cp='cp -rv'
alias rm='rm -P'

type exa > /dev/null 2>&1 &&
    alias ls='exa -F' ||
    alias ls='ls -F'

alias {l,sls,sl}=ls
alias ll='l -l'
alias la='l -a'
alias lla='l -al'
alias lsf='l "${PWD}"/*'

alias {c,cc,cll,clear}='printf "\033c"'
alias {cls,csl,cl,lc}='c;l'
alias {e,ech}=echo

alias file='file -b -i -L'
alias date="date '+%a %b %d - %l:%M %p'"
alias {dmesg,dmegs}='dmesg | tail -n 20'

ext() { echo "${1##*.}" ; }
filename() { echo "${1%.*}" ; }

pa(){ ps auwwx | head ; }
ph(){ ps auwwx | grep -i -e ${USER} | head ; }

alias mv='mv -v'
alias {mkdir,mkd,mkdr}='mkdir -p'
mkcd() { mkd "$1" && cd "$1" ; }
mvcd() { mv "$1" "$2" && cd "$2" ; }
cpcd() { cp "$1" "$2" && cd "$2" ; }

du() { command du -ahLd 1 2> /dev/null | \
           /usr/bin/sort -rh | /usr/bin/head -n 20 ; }

alias df='df -h'
alias man='man -a'
alias cx='chmod +x'

reload() { . ${HOME}/etc/aliases
           . ${HOME}/etc/profile
           xrdb load ${HOME}/etc/Xresources
           xmodmap ${HOME}/etc/Xmodmap
           xset m 0 0 ; } > /dev/null

alias jjar='java -jar'
nasm() { [ -f "$1" ] && c &&
             command nasm -f elf32 -g -F dwarf "$1" &&
                ld -m elf_i386 "${1%.*}.o" -o "${1%.*}" &&
                    ./"${1%.*}" ; }

alias nf='neofetch'
alias {irc,irssi}="irssi -c freenode"
alias discline='dash ${HOME}/usr/bin/discline ; x'
alias {rtv,reddit}="rtv --enable-media ; c"
alias compton="pkill -9 compton ; compton & c"

w3m() { [ $# -eq 0 ] &&
            command w3m -F https://ddg.gg/lite ||
            command w3m -F "$@" ; }

bar() { pkill -9 bar lemonbar > /dev/null 2>&1
        ${HOME}/bin/bar & c ; }

alias {mk,mkae}="make -j$(sysctl -n hw.ncpu)"
alias mkc='make clean'
alias mkall="make clean ; make && doas make install"

gcc() { command gcc $@
        echo -n "${PWD}"/"$(basename $1 -- 2> /dev/null)" \
        > /tmp/shell/last_gcc ; }

!g() { path="$(cat /tmp/shell/last_gcc -- 2> /dev/null)"
       [ -n "$path" ] &&
           { echo "gcc $path" ; command gcc "$path" ; } ||
                echo "No recent gcc" ; }

g(){ grep "$@" ; }
pg() { pgrep "$@" ; }
dg() { command du -ahLd 1  | g "$@" ; }
f () { [ $# -gt 0 ] && find . -iname "*$1*" ; }
hg() { [ $# -gt 0 ] && cat ${HISTFILE} | \
    grep "$@" | head -n 20 ; }
sg() { sysctl | g "$@" ; }

alias {x,xx,xxx,q,qq,qqq,:q,:Q,:wq,:w}=exit

alias reboot='doas reboot'
alias shutdown='doas shutdown -p now'

mkxz() { f="$(e $1 | sed 's/\///')" &&
             tar -cvpf "$f.tar" "$f" &&
                 xz "$f.tar" &&
                     [ -f "$f.tar.xz" ] &&
                         rm -rf "$f" && unset f ; }
mkgz() { f="$(e $1 | sed 's/\///')" &&
            tar -cvzpf "$f.tar.gz" "$f" &&
                [ -f "$f.tar.gz" ] &&
                    rm -rf "$f" && unset f ; }
mkbz2() { f="$(e $1 | sed 's/\///')" &&
              tar -cvjpf "$f.tar.bz" "$f" &&
                  [ -f "$f.tar.bz" ] &&
                      rm -rf "$f" && unset f ; }

alias {v,vi,vim,nvim}=${EDITOR}
vim() { [ $# -eq 0 ] &&
            command ${EDITOR} -c VimwikiIndex ||
                command ${EDITOR} -p "$@"
        echo -n "${PWD}"/"$(basename $1 2> /dev/null)" \
            > /tmp/last_vi ; }

!v() { path="$(cat /tmp/last_vi -- 2> /dev/null)"
    [ -n "$path" ] &&
        { echo "v $path" ; v "$path" ; x ; } ||
            echo "No recent vi" ; }

alias {notepad,vtmp}='${EDITOR} /tmp/notepad.md'
alias {suvim,suvi}='doas ${EDITOR}'
alias view='${EDITOR} -R'

alias {h,htpo,hto,ht,hpot,hotp}=htop
alias hm='h -u ${USER}'
alias hr='h -u root'

ranger() {
    [ $# -eq 0 ] &&
        { [ "${PWD}" = ${HOME} ] &&
          path=${HOME} || path="${PWD}" ; } ||
              path="$1"
    echo -n "$path" > /tmp/last_ranger
    command ranger "$@"
}
!r() { path="$(cat /tmp/last_ranger -- 2> /dev/null)"
    [ -n "$path" ] &&
        { echo "ranger $path" ; ranger "$path" ; x ; } ||
            echo "No recent ranger" ; }

# This is a hack to let you use "$@" with an 1-char alias
# in shells like ksh. You can't do this without a function,
# but you also can't have a 1-char long function.
_r() { ranger "$@" ; x ; }
alias r='_r';[ -n "$RANGER_LEVEL" ] && \
    PS1="$PS1"'(RANGER): ' && clear && ls -F

trans(){ command trans -no-auto -b "$@" ; }
rtrans(){ command trans -from en -to de -no-auto -b "$@" ; }

alias yt="c; youtube-viewer -C -q --vd=high"
alias ytm="c;yt -n"
alias ytdv="c;yt -d"
alias ytdm='c;yt -n -d --convert-to=opus \
    --convert-cmd="ffmpeg -loglevel -8 -i \
    file:*IN* -vn -acodec libopus -ab 128k -y *OUT*"'
alias ytsubs='c;yt --subs-videos --subs-order=unread'
alias ytchans='c;yt --subscriptions'
alias ytfavs='c;yt --favorites=mine'
alias ytme='c;yt --channel-videos=mine'

mpv() { [ $# -gt 0 ] &&
        { [ $(pgrep mpv) ] && killall mpv ; } ||
        command mpv --title=mpv "$@" & x ; }
mpvm() { mpv --no-video "$@" ; }
mpvx() { (mpv "$(xsel -o)" &) ; }
mpvyt() { mpv ytdl://ytsearch:"$@" ; }
mpvytm() { mpv --no-video ytdl://ytsearch:"$@" ; }

alias ytdl='youtube-dl --geo-bypass --prefer-ffmpeg'
alias ytdlm="youtube-dl --extract-audio --geo-bypass \
    --prefer-ffmpeg  --audio-quality 0 --audio-format opus"

alias record-webcam='ffmpeg -i /dev/video0 -f sndio -i \
    default "$(date)".mp4'

alias feh='feh -q -N -x --scale-down'
alias resize-half='mogrify -resize 50%X50%'
alias resize-quarter='mogrify -resize 25%X25%'
import() { command import -quiet -silent -window root \
       -quality 100 ${HOME}/import.png ; }

alias w='curl http://wttr.in/Schmalkalden'
alias wsd='curl http://wttr.in/Dakota_State_University'
alias wok='curl http://wttr.in/Claremore'

alias {xs,xc}='xsel -o ; e'

alias rsync='rsync -rtvuclh4 --progress --delete'
p() { [ $# -eq 0 ] &&
          addr=mitchweaver.xyz ||
              addr="$1"
      ping -c 1 -n -q -s 1 -w 10 \
          "$addr" > /dev/null 2>&1 &&
              echo "UP" || echo "DOWN" ; }
alias pubip='curl https://wtfismyip.com/text'

alias scp='scp -rp4'
alias sshd='doas /usr/sbin/sshd'

alias kshrc='v ${HOME}/etc/kshrc'
alias {aliases,alaises,alises}='v ${HOME}/etc/aliases'
alias profile='v ${HOME}/etc/profile'
alias {vimrc,virmc}='v ${HOME}/etc/vimrc'
alias {bmk,bmks}='v ${HOME}/var/files/surf-bookmarks.txt'
alias vssh='v ${HOME}/.ssh/config'
alias xinitrc='v ${HOME}/etc/xinitrc'

gup() { git add -A &&
        git commit -m "$@" &&
        git push -u origin $(git branch 2> /dev/null | \
            sed -e '/^[^*]/d' | sed 's/* //') ; }
gadd() { [ $# -eq 0 ] && git add -A || git add "$@" ; }
gmit() { { [ $# -eq 1 ] && git add -A && \
                git commit -m "$@" ; } ||
                    { git add "$1" ; shift
            git commit -m "$@" ; } ; }
gout() { git push -u origin $(git rev-parse \
    --abbrev-ref HEAD) "$@" ; }
gdiff() { git diff origin/master ; }
gstat(){ git status ; }
greset() { git reset --hard HEAD~"$1" ; }
gbase() { [ $# -eq 0 ] &&
                git rebase -i HEAD~10 ||
                git rebase -i HEAD~"$1" ; }
gmote() { git init ; git remote add origin "$1" ; }
gclone() { git clone https://github.com/"$1" ; }
alias gbort='git rebase --abort'
alias glog='git log'
alias gfetch='git fetch'
alias gppull='git pull'
alias gbranch='git branch'
alias {gcheck,checkout}='git checkout'

alias {..,cd..}='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

g~() { cd ${HOME} ; cls ; }
m~() { mv "$1" ${HOME} ; }
Y~() { cp "$1" ${HOME} ; }
gh() { cd ${HOME}/var/files/homework ; cls ; }
