ml() { doas mv "$1" /lib ; }
Yl() { doas cp "$1" /lib ; }
gO() { cd /opt ; cls ; }
mO() { doas mv "$1" /opt ; }
YO() { doas cp "$1" /opt ; }
gt() { cd ${HOME}/tmp ; cls ; }
mt() { mv "$1" ${HOME}/tmp ; }
Yt() { cp "$1" ${HOME}/tmp ; }
gcf() { cd ${HOME}/etc/config ; cls ; }
mcf() { mv "$1" ${HOME}/etc/config ; }
